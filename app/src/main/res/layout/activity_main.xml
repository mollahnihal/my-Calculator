<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E1E1E1"
    android:orientation="vertical">

    <!-- Display for showing calculations -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:padding="10dp" />



    <!-- Row 1: Operators -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnSubtract"
            android:text="-"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnMultiply"
            android:text="*"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnDivide"
            android:text="รท"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <!-- Row 2: Numbers 7, 8, 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:text="7"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn9"
            android:text="9"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <!-- Row 3: Numbers 4, 5, 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:text="4"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn6"
            android:text="6"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <!-- Row 4: Numbers 1, 2, 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:text="1"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn3"
            android:text="3"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <!-- Row 5: Decimal, 0, Clear -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDecimal"
            android:text="."
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btn0"
            android:text="0"
            style="@style/ButtonStyle" />
        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:background="#FF4444"
            android:textColor="#e64717"
            style="@style/ButtonStyle" />
    </LinearLayout>

    <!-- Row 6: Equal Button covering entire width -->
    <Button
        android:id="@+id/btnEqual"
        android:text="Answer"
        android:textSize="24sp"
        android:background="#009624"
        android:textColor="#e64717"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
